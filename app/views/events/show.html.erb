<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @event.image_url %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.time %>
</p>

<p>
  <strong>About:</strong>
  <%= @event.about %>
</p>

<p>
  <strong>Host:</strong>
  <%= @event.user.first_name %>
</p>

<p>
  <strong>Venue:</strong>
  <%= link_to @event.venue.name, venue_path(@event.venue.id) %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.venue.full_street_address %>
</p>

<p>
  <strong>Cause:</strong>
  <%= link_to @event.cause.name, cause_path(@event.cause.id)%>
</p>

