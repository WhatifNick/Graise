<p id="notice"><%= notice %></p>

<h1><%= link_to "Set your Location", "areas/new" if current_user && current_user.area.id==1 %>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Date</th>
      <th>Time</th>
      <th>About</th>
      <th>User</th>
      <th>Venue</th>
      <th>Cause</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.image %></td>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= event.about %></td>
        <td><%= event.user %></td>
        <td><%= event.venue %></td>
        <td><%= event.cause %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
