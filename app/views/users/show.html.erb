<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @user.image_url %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @user.phone_number %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<p>
  <strong>Area:</strong>
  <%= "#{@user.city},#{@user.state}" if @user.city!=nil && @user.state!=nil %>
</p>
<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
