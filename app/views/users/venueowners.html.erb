<p id="notice"><%= notice %></p>

<h1>Venue Owners</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Image</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Venue</th>
      <th>Email</th>
      <th>Phone number</th>

      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.image_url(:thumb) %></td>
        <td><%= link_to user.first_name, user_path(user.id) %></td>
        <td><%= link_to user.last_name, user_path(user.id) %></td>
        <td><%= link_to user.venue.name, venue_path(user.venue.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>

        <td><%= "#{user.city},#{user.state}" if user.city!=nil && user.state!=nil %></td>


      </tr>
    <% end %>
  </tbody>
</table>
