<p id="notice"><%= notice %></p>

<h1>Venues</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Website</th>
      <th>Style</th>
      <th>About</th>
      <th>Street address</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.image %></td>
        <td><%= venue.name %></td>
        <td><%= venue.phone_number %></td>
        <td><%= venue.email %></td>
        <td><%= venue.website %></td>
        <td><%= venue.style %></td>
        <td><%= venue.about %></td>
        <td><%= venue.street_address %></td>
        <td><%= venue.area %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venue', new_venue_path %>
